<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>
<body>
    <%- include("partials/header") %>

    <main>
        <form action="/update-post/<%= post.id %>" method="POST">
            <% if (errors.length > 0) { %>
            <% errors.forEach(error => { %>
            <p class="notice"><%= error %></p>
            <% }); %>
            <% } %>

            <fieldset>
                <legend>Edit a Post</legend>

                <label for="title">Title</label>
                <input type="text" value="<%= post.title %>" id="title" name="title" required>

                <label for="body"><small>Content</small></label>
                <textarea name="body" id="body"><%= post.content %></textarea>
            </fieldset>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </main>

    <%- include("partials/footer") %>
</body>
</html>
